        <ul class="dropdown-menu">
            <% if (locals.name) { %>
             <li><p class="profile">Hi <%= name %></p></li>
            <% } %>
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                <li><a class="dropdown-item" href="/user/admin/login">DASHBOARD</a></li>
            <% } %>
            
            <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item secondary" href="/logout">Logout</a></li>
        </ul>
      </div>
















   
    <h1>URL-Shortener</h1>

    <% if (locals.NoUrl) { %>
    <form method="post" action="/url/">
        <label>Enter your original URL</label>
        <p style="color: red;"><%= NoUrl %></p>
        <input type="text" name="url" placeholder="https://example.com">
        <button class="btn1" type="submit">Generate</button>
    </form>
    <% } else { %>
    <form method="post" action="/url/">
        <label>Enter your original URL</label>
        <input type="text" name="url" placeholder="https://example.com">
        <button type="submit">Generate</button>
    </form>
    <% } %>

    <% if (locals.id) { %>
    <p>URL GENERATED: <a href="http://localhost:8001/url/<%= id %>" target="_blank">http://localhost:8001/url/<%= id %></a></p>
    <% } %>

    <% if (locals.urls) { %>
    <table>
        <thead>
            <tr>
                <th>S.NO</th>
                <th>SHORTID</th>
                <th>Redirect</th>
                <th>Clicks</th>
                <th>RedirectShort-URL</th>
            </tr>
        </thead>
        <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortID %></td>
                <td><%= url.redirectURL %></td>
                <td><%= url.visitHistory.length %></td>
                <td><a href="http://localhost:8001/url/<%= url.shortID %>" target="_blank">http://localhost:8001/url/<%= url.shortID %></a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } %>

    <!-- Adding the bubbles to the body -->
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>









   
</body>

</html>